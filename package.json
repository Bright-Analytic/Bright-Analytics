{
  "name": "analyzecore",
  "version": "1.0.0",
  "description": "Bright Analytics for a smarter tomorrow.",
  "scripts": {
    "start:services": "docker-compose up",
    "stop:services": "docker-compose down",
    "lint": "eslint 'apps/**/*.ts' 'libs/**/*.ts'",
    "format": "prettier --write 'apps/**/*.{ts,tsx,js,json,md}' 'libs/**/*.{ts,tsx,js,json,md}'",
    "build": "lerna run build",
    "build:libs": "lerna run build --scope @shared/*",
    "build:apps": "lerna run build --scope @apps/*",
    "build:pkg": "lerna run build --scope",
    "test": "lerna run test",
    "clean": "rimraf **/dist"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.18.0",
    "lerna": "^8.1.9",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "dependencies": {
    "@shared/kafka-client": "^1.0.0",
    "@shared/pulsar-client": "^1.0.0",
    "@shared/rabbitmq-client": "^1.0.0",
    "@shared/redis-client": "^1.0.0",
    "amqplib": "^0.10.5",
    "drizzle-orm": "^0.38.3",
    "ioredis": "^5.4.2",
    "kafkajs": "^2.2.4",
    "pulsar-client": "^1.12.0",
    "rimraf": "^2.7.1"
  }
}
